<!DOCTYPE html>
<html ng-app="nexus">
<head>
    <meta charset="utf-8" />
    <base href="/">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=vietnamese" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/Content/angular-table-resize.css">
    <link rel="stylesheet" type="text/css" href="/Content/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/selectize.css">
    <link rel="stylesheet" type="text/css" href="/Content/select.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/toastr.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/aboutus.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/history.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/homepage.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/pay.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/product.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/productdetail.css">
    <link rel="stylesheet" type="text/css" href="/Content/Home/userprofile.css">
</head>
<body ng-controller="MainCtrl" ng-init="loadLayout()">
    <div class="main">
        <div class="header-homepage">
            <a href='@Url.Action("Index", "Home", new { id = UrlParameter.Optional })'>
                <div class="logo-header">
                    <img src="https://i.imgur.com/QDKpQct.png" alt="Alternate Text" />
                </div>
            </a>
            <div class="btn-header">
            <button data-toggle="modal" ng-click="displayLogin = true" data-target="#loginmodal" class="btn btn-login-head">LOGIN</button>
        </div>
            <div class="loginsucess ">
                <div class="dropdown">
                    <div class="nameacc dropdown-toggle" data-toggle="dropdown">
                        User : <span class="username">Đào Tuấn Tú</span>
                        <span class="caret"></span>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a href='@Url.Action("UserProfile", "Home", new { id = UrlParameter.Optional })'>Account</a></li>
                        <li><a href='@Url.Action("History", "Home", new { id = UrlParameter.Optional })'>Transaction history</a></li>
                        <li><a href='@Url.Action("UserProfile", "Home", new { id = UrlParameter.Optional })'>Logout</a></li>
                    </ul>
                </div>
                <div class="position">
                    Chức Vụ : <span class="positionname">Customer</span>
                </div>
            </div>
            <div class="aboutus">
                <a href='@Url.Action("AboutUs", "Home", new { id = UrlParameter.Optional })'>AboutUs</a> |
                <a href='@Url.Action("Product", "Home", new { id = UrlParameter.Optional })'>Services</a>
            </div>
        </div>
        @RenderBody()
        <div class="footer-homepage">
            <div class="ft-text">
                Copyright 3TSD © 2019
            </div>
            @*<div class="ft-logo">
                <img src="https://i.imgur.com/QDKpQct.png" alt="Alternate Text" />
            </div>*@
        </div>
        <div id="loginmodal" class="modal " role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="main-modal-log">
                        <div class="logo-modal-log">
                            <img src="https://i.imgur.com/QDKpQct.png" alt="Alternate Text" />
                        </div>
                        <div class="formm" ng-hide="displayLogin">
                            <form action="/" method="post" class="form form-res">
                                <input class="form-control" type="text" name="name" value="" placeholder="Tên đăng nhập" />
                                <input class="form-control" type="text" name="name" value="" placeholder="Email" />
                                <input class="form-control" type="text" name="name" value="" placeholder="Địa Chỉ" />
                                <input class="form-control" type="password" name="name" value="" placeholder="Mật khẩu" />
                                <input class="form-control" type="password" name="name" value="" placeholder="Nhập Lại Mật khẩu" />
                                <button class="form-control btn-success btn-res-modal">Hoàn Tất</button>
                            </form>
                            <p>Nếu đã có tài khoản vui lòng <span ng-click="displayLogin = !displayLogin" id="modaldis-res">Đăng Nhập</span> !</p>
                        </div>
                        <div class="formm" ng-hide="!displayLogin">
                            <form action="/" method="post" class="form form-log">
                                <input class="form-control" type="text" name="name" value="" placeholder="Tên đăng nhập" />
                                <input class="form-control" type="password" name="name" value="" placeholder="Mật khẩu" />
                                <button class="form-control btn-success btn-login-modal">Đăng Nhập</button>
                            </form>
                            <p>Nếu chưa có tài khoản vui lòng <span ng-click="displayLogin = !displayLogin" id="modaldis-login">Đăng Ký</span> !</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Scripts/jquery-3.3.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/angular.min.js"></script>
    <script src="/Scripts/angular-translate.min.js"></script>
    <script src="/Scripts/angular-sanitize.min.js"></script>
    <script src="/Scripts/ocLazyLoad.min.js"></script>
    <script src="/Scripts/angular-ui-router.min.js"></script>
    <script src="/Scripts/angular-locale_vi-vn.js"></script>
    <script src="/Scripts/ui-bootstrap-tpls-1.3.3.min.js"></script>
    <script src="/Scripts/angular-idle.js"></script>
    <script src="/Scripts/base64.js"></script>
    <script src="/Scripts/angular-cookies.min.js"></script>
    <script src="/Scripts/angular-animate.js"></script>
    <script type="text/javascript" src="/Scripts/select.min.js"></script>
    <script type="text/javascript" src="/Scripts/toastr.js"></script>
    <script type="text/javascript" src="/Scripts/angular-ui-utils.min.js"></script>
    <script type="text/javascript" src="/Scripts/imageupload.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/Scripts/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="/Scripts/selectize.js"></script>
    <script type="text/javascript" src="/Scripts/datetime-picker.js"></script>
    <script type="text/javascript" src="/Scripts/angular-selectize.js"></script>
    <script type="text/javascript" src="/Scripts/sweetalert.min.js"></script>
    <script src="/Scripts/app/app.js"></script>
    <script src="/Scripts/app/homepage.js"></script>

    <script src="/Scripts/app/config.js"></script>
    <script src="/Scripts/app/services.js"></script>
    <script src="/Scripts/app/directives.js"></script>
    <script type="text/javascript" src="/Scripts/app/mainctrl.js"></script>
</body>
</html>
